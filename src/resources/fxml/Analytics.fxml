<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AnalyticsController">
    <children>
        <VBox spacing="12.0" AnchorPane.topAnchor="12.0" AnchorPane.leftAnchor="12.0" AnchorPane.rightAnchor="12.0" AnchorPane.bottomAnchor="12.0">
            <children>
                <Label text="Analytics" style="-fx-font-size:20px; -fx-font-weight:700; -fx-text-fill:#222;" />

                <!-- Top stat cards -->
                <HBox spacing="12.0">
                    <children>
                        <VBox fx:id="cardMembers" style="-fx-background-color:#ffffff; -fx-padding:14; -fx-background-radius:8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 8,0,0,2);" prefWidth="220">
                            <children>
                                <Label text="Members" style="-fx-font-size:12px; -fx-text-fill:#666;" />
                                <Label fx:id="totalMembersLabel" text="0" style="-fx-font-size:20px; -fx-font-weight:700; -fx-text-fill:#111;" />
                            </children>
                        </VBox>

                        <VBox fx:id="cardVisitors" style="-fx-background-color:#ffffff; -fx-padding:14; -fx-background-radius:8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 8,0,0,2);" prefWidth="220">
                            <children>
                                <Label text="Visitors (today)" style="-fx-font-size:12px; -fx-text-fill:#666;" />
                                <Label fx:id="totalDailyVisitorsLabel" text="0" style="-fx-font-size:20px; -fx-font-weight:700; -fx-text-fill:#111;" />
                            </children>
                        </VBox>

                        <VBox fx:id="cardActive" style="-fx-background-color:#ffffff; -fx-padding:14; -fx-background-radius:8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 8,0,0,2);" prefWidth="220">
                            <children>
                                <Label text="Active Today" style="-fx-font-size:12px; -fx-text-fill:#666;" />
                                <Label fx:id="activeTodayLabel" text="0" style="-fx-font-size:20px; -fx-font-weight:700; -fx-text-fill:#111;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Revenue cards -->
                <HBox spacing="12.0">
                    <children>
                        <VBox style="-fx-background-color:#fff; -fx-padding:12; -fx-background-radius:8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 6,0,0,1);" prefWidth="240">
                            <children>
                                <Label text="Subscription Revenue" style="-fx-font-size:11px; -fx-text-fill:#666;" />
                                <Label fx:id="totalSubscriptionRevenueLabel" text="0" style="-fx-font-size:18px; -fx-font-weight:700; -fx-text-fill:#1b5e20;" />
                            </children>
                        </VBox>

                        <VBox style="-fx-background-color:#fff; -fx-padding:12; -fx-background-radius:8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 6,0,0,1);" prefWidth="240">
                            <children>
                                <Label text="Visitor Income (today)" style="-fx-font-size:11px; -fx-text-fill:#666;" />
                                <Label fx:id="totalDailyVisitorRevenueLabel" text="0" style="-fx-font-size:18px; -fx-font-weight:700; -fx-text-fill:#0d47a1;" />
                            </children>
                        </VBox>

                        <VBox style="-fx-background-color:#fff; -fx-padding:12; -fx-background-radius:8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 6,0,0,1);" prefWidth="240">
                            <children>
                                <Label text="Beverage Revenue" style="-fx-font-size:11px; -fx-text-fill:#666;" />
                                <Label fx:id="totalBeverageRevenueLabel" text="0" style="-fx-font-size:18px; -fx-font-weight:700; -fx-text-fill:#bf360c;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Combined total -->
                <VBox spacing="6" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #f7f7f7); -fx-padding:14; -fx-background-radius:8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.04), 8,0,0,2);">
                    <children>
                        <Label text="Total Revenue" style="-fx-font-size:12px; -fx-text-fill:#666;" />
                        <Label fx:id="combinedTotalRevenueLabel" text="0" style="-fx-font-size:22px; -fx-font-weight:800; -fx-text-fill:#000;" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets top="8" right="8" bottom="8" left="8" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
